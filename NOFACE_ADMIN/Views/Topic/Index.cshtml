        $(function () {
            $(".btn-AddTopic").click(function () {

                var text = document.getElementById("inputTopic").value;
                var ImgTopic = document.getElementById("inputImgTopic").value;

                if (text.length < 30 && text.length > 0 && ImgTopic != "") {

                    var result = confirm("Bạn có chắc chắn muốn thêm chủ đề này?");

                    if (result == true) {
                        $.ajax({
                            type: "POST",
                            url: '@Url.Action("AddTopic", "Topic")',
                            data: JSON.stringify({
                                topic: { IDTopic: 0, TopicName: text, Img: ImgTopic}
